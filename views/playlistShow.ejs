<% include nav %>

<style>
 	.background-image { 
		background: url("<%= playlists.cover %>") no-repeat center center fixed; 
		background-size: 100%;
		background-position: center;
		background-repeat: no-repeat;
		z-index: -1;
		filter: blur(100px) saturate(150%);
		width: 100%;
		height: 100%;
		transform: scale(1.3);
		position: absolute;
		top: 0;
		left: 0;
	}
</style>

<div class="playlist-details">

	<div class="playlists-details-header">
		<h1>
			<i class="fa fa-list-ul" aria-hidden="true"></i>
			<%= playlists.name %>
		</h1>
	</h1>

	<div class="tracks">

		<% playlists.tracks.forEach(function(tracks, index) { %>
			<hr>
			<div class="track">
				<a href="<%= tracks.trackLink %>"><img src="<%= tracks.cover %>"></a>
				<div class="track-details">
				  <h4><a href="<%= tracks.trackLink %>"><%= tracks.name %></a></h4>
				  <p>Artist: <a href="<%= tracks.artistLink %>"><%= tracks.artist %></a></p>
				  <p>Album: <a href="<%= tracks.albumLink %>"><%= tracks.album %></a></p>
				</div>
			</div>
		<% }); %>

	</div>
</div>

<div class="background-image"></div>