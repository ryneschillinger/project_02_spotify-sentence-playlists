<% include mosaic-bkg %>

<div class="form-container">

	<h1 class="form-header">
		Log In
	</h1>

	<% include alerts %>

	<form action="/auth/login" method="POST">
	  <div class="form-group-login">
	    <label for="authEmail">Email</label>
	    <input id="authEmail" class="form-control" type="email" name="email">
	  </div>

	  <div class="form-group-login">
	    <label for="authPassword">Password</label>
	    <input id="authPassword" class="form-control" type="password" name="password">
	  </div>

	  <input class="btn btn-primary btn-login" type="submit" value="Log In">
	</form>

	<p class="body-text no-account">
		No account?
		<a href="/auth/signup">Sign up here.</a>
	</p>

	<% include back-to-home %>

</div>